<div class='post'>
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.email %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', bbs.post_path(post) %></td>
        <td><%= link_to 'Edit', bbs.edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', bbs.post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


